<!DOCTYPE html>
%html
  %head
    %title
      klekr
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    - if @current_collector
      :javascript
        klekr.Global.currentCollector = {id: #{@current_collector.id}};
    %meta{name: "viewport", content: "width=device-width, height=device-height, maximum-scale=1.4, initial-scale=1.0, user-scalable=yes"}
    = yield(:head)
    = csrf_meta_tag
    - if Rails.env.production?
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-26359304-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

  %body
    #top-banner
      #top-banner-left.section
        .fleft
          = yield(:top_left)
        #top-banner-middle.fleft
          = yield(:top_middle)
      .section
        #top-banner-right.fright
          %h4.inline
            - unless @disable_navigation
              = render_navigation_links
        #top-banner-welcome.fright
          - if @current_collector
            = render partial: '/general/user_info'
        .fright
          = yield(:top_right)

    = yield

