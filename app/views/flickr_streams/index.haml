- content_for(:head) do
  = javascript_include_tag 'sources.js'
  :javascript
    __sourcesPath__ = '#{my_sources_flickr_streams_path}';

- content_for(:top_left) do
  .fleft
    = icon(@current_collector)  
  .fleft
    %h3
      My Sources

#sources.container
  #sources-list
  #star-category-template.star-category.well.row.hidden
    .stars-label
      ★
    = render partial: 'streams_grid'

  #empty-sources.well.hidden
    %h2
      Darn! I have no sources.  ↓

  #sources-management.well.hidden
    %h2.pointer
      %a#expand-management{src: '#'}
        I want more sources!
    #sources-import-panel.hidden

      .row
        .cell.import-method.well
          %h4.pointer
            %a#add-contracts-link{href: '#'}
              Add all my flickr contacts as my sources.
        .cell.import-method.well
          %h4= link_to 'Add source by user', users_path
      .row
        .cell.import-method.well
          %h4.pointer
            %a#add-editor-streams-link{href: '#'}
              Add editorial choice of sources.
        .cell.import-method.well
          %h4
            %a#import-google-reader-link{href: '#'}
              Import from my google reader subscription

= render partial: 'import_editor_streams'
= render partial: 'import_contacts'
= render partial: 'import_google_reader'
