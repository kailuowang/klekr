:javascript
  __gridMode__ = true;
  klekr.Global.filtersOpts = { ratingFilter: true, favedAtFilter: #{@current_collector.collection_synced?} }

- content_for(:top_left) do
  .fleft
    = icon(@current_collector)
  .fleft
    %h3
      My Collection
  #option-button.gallery-option.fleft
    = image_tag('option.png')
  .fleft.has-popover{'data-content' => 'Chose your favorite social network to share. The shared collection will have the same filter settings your are using now.', title: 'Share Your Collection', 'data-popover' => 'below'}
    = render partial: '/general/add_this', locals: {title: "Checkout my klekr collection: ", :dynamic_url => true}
= render partial: 'slideshow'
= render partial: 'slide_options'