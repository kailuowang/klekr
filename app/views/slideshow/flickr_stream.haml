:javascript
  __gridMode__ = true;

- content_for(:top_left) do
  .fleft
    = link_to(icon(@stream), @stream.user_url, target: '_blank')
  .fleft
    %h4
      #{link_to(@stream.username, @stream.user_url, target: '_blank')}'s
      = @stream.type_display
    %h5
      = render partial: 'stream_panel'
- content_for(:top_right) do
  %h4.inline
    = link_to @stream.alternative_stream.to_s, flickr_stream_path(@stream.alternative_stream)
    |
=render partial: 'slideshow'