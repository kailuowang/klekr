#slide-options
  .header
    .fleft
      %h4
        Slide Options
    %a.close-btn{href: "#"} ×
    .clearfix
  .filters.clearfix
    #stream-type-filter-panel
      %h5
        %label
          %input#type-filter-checkbox{type: 'checkbox', name: 'upload-only'}
            Only pictures from
            %span.hasTwipsy{title: "Sources of artists' works."}direct sources
    #rating-filter-panel
      %h5.inline
        rating higher or equal:
      #rating-filter.inline
        = select_tag 'rating_filter', options_for_select(['★', '★★', '★★★', '★★★★', '★★★★★']), id: 'rating-filter-select'
    #faved-at-filter-panel
      %h5.inline
        collected before:
      #faved-at-date-filter.inline
        %input#fave-at-date.datepicker{type: :text, name: 'faved-at-date'}
  #lower.clearfix
  .fright
    %a#under-the-hood{href: '#'}
      Go Offline!
  #under-the-hood-panel.clearfix.hidden
    .fleft
      #system-status
        Current Status:
        %span#connection-status-label
      #cache-info
        Pictures downloaded:
        %span#num-of-pics-in-cache 0
      #downloading-info
        Pictures downloading:
        %span#num-of-downloading-pics 0
    #ops-buttons.fright
      %a#download-pictures.btn{href: '#'}
        Download more pictures!
      = image_tag 'loading.gif', class: 'hidden', id: 'loading'