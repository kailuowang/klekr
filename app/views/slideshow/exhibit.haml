:javascript
  __gridMode__ = true;
  klekr.Global.filtersOpts = { ratingFilter: true, favedAtFilter: false}
  klekr.Global.readonly = true
  klekr.Global.canAutoPlay = true

- if @defaultFilters
  :javascript
    klekr.Global.defaultFilters = #{@defaultFilters}

- content_for(:top_left) do
  .fleft
    = icon(@icon)
  .fleft
    %h3
      = @exhibit_name
  .fleft
    = render partial: '/general/add_this', locals: {title:  @collector.user_name + "'s klekr faves: "}
- content_for(:top_right) do
  - if @current_collector.blank?
    %h3#invite-link
      = link_to  'Like these photos? Start your own discovery on klekr now!', slideshow_path


= render partial: 'slideshow'
= render partial: 'slide_options'