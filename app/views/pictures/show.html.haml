- content_for(:head) do
  = javascript_include_tag 'slideshow.js'
:javascript
  next3images = #{@next3pictures.to_json}
  medium_url = '#{@picture.flickr_url('medium')}'

.picture{:style => "width: 1280px; text-align: center; padding-top: 20px"}
  = link_to image_tag(@picture.flickr_url(picture_show_size), :id => 'picture'), next_picture_path(@picture)
  .link{style: 'text-align:center, width: 100%'}
    = link_to 'Previous', picture_path(@picture.next.id) if @picture.next
    |
    = link_to 'Next', next_picture_path(@picture)

  %p
    %b Title:
    = link_to display_title(@picture), @picture.url
    |
    from
    - @picture.flickr_streams.each do |flickr_stream|
      = link_to "#{flickr_stream.username}'s #{flickr_stream.type}", flickr_streams_path
      |
    = link_to 'All Pictures', pictures_path
    = render 'cookie_settings/form'

  %p{:id => "notice"}
    = notice

